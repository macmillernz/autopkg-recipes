<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
<!--Short desciption of what the recipe does.-->
	<key>Description</key>
	<string>Downloads the latest version of Adobe's Creative Cloud Desktop App Installer and packages it for installation.</string>
<!--Recipe identifier. Recipes will cache to a folder named %identifier%-->
	<key>Identifier</key>
	<string>com.github.macmiller.pkg.AdobeCreativeCloudInstaller</string>
	<key>Input</key>
	<dict>
<!--Name should match the real applications name.-->
		<key>NAME</key>
		<string>Creative Cloud Installer</string>
		<key>VENDOR</key>
		<string>Adobe</string>
		<key>SOFTWARETITLE</key>
		<string>Creative Cloud Installer</string>
<!--Shortname used when naming packages. Usually %name% with no spaces.-->
		<key>SHORTNAME</key>
		<string>CreativeCloudInstaller</string>
	</dict>
	<key>MinimumVersion</key>
	<string>1.0.0</string>
<!--Identifier of the download recipe-->
	<key>ParentRecipe</key>
	<string>com.github.macmiller.download.AdobeCreativeCloudInstaller</string>
<!--Recipe workflow. Processors can be in any order but should be logically sorted.-->
	<key>Process</key>
	<array>
<!--PkgRootCreator process creates a root directory. This is the literal path(s) for files and folders to be packaged.-->
		<dict>
			<key>Processor</key>
			<string>PkgRootCreator</string>
			<key>Arguments</key>
			<dict>
				<key>pkgroot</key>
				<string>%RECIPE_CACHE_DIR%/pkgroot</string>
				<key>pkgdirs</key>
				<dict/>
			</dict>
		</dict>
<!--Versioner processor reads the CFBundleVersion or CFShortBundleVersion from info.plist inside the application.-->
		<dict>
			<key>Processor</key>
			<string>Versioner</string>
			<key>Arguments</key>
			<dict>
				<key>input_plist_path</key>
				<string>%pathname%/Install.app/Contents/Info.plist</string>
				<key>plist_version_key</key>
				<string>CFBundleVersion</string>
			</dict>
		</dict>
<!--Copier process can copy files or folders from one location to the package root for use in pre/postinstall.-->
		<dict>
			<key>Processor</key>
			<string>Copier</string>
			<key>Arguments</key>
			<dict>
				<key>source_path</key>
				<string>%pathname%/Install.app</string>
				<key>destination_path</key>
				<string>%RECIPE_CACHE_DIR%/Scripts/Install.app</string>
				<key>overwrite</key>
				<true/>
			</dict>
		</dict>
		<dict>
			<key>Processor</key>
			<string>Copier</string>
			<key>Arguments</key>
			<dict>
				<key>source_path</key>
				<string>%pathname%/packages</string>
				<key>destination_path</key>
				<string>%RECIPE_CACHE_DIR%/Scripts/packages</string>
				<key>overwrite</key>
				<true/>
			</dict>
		</dict>
		<dict>
			<key>Processor</key>
			<string>Copier</string>
			<key>Arguments</key>
			<dict>
				<key>source_path</key>
				<string>%pathname%/resources</string>
				<key>destination_path</key>
				<string>%RECIPE_CACHE_DIR%/Scripts/resources</string>
				<key>overwrite</key>
				<true/>
			</dict>
		</dict>
<!--FileCreator creates files in the relevant path-->
		<dict>
			<key>Processor</key>
			<string>FileCreator</string>
			<key>Arguments</key>
			<dict>
				<key>file_path</key>
				<string>%RECIPE_CACHE_DIR%/Scripts/postinstall</string>
				<key>file_mode</key>
				<string>0755</string>
				<key>file_content</key>
				<string>#!/bin/bash

# Determine working directory
install_dir=$(dirname $0)

# Install the Creative Cloud  application using the Install binary's silent install mode
"${install_dir}/Install.app/Contents/MacOS/Install" --mode=silent</string>
			</dict>
		</dict>
<!--PkgCreator processor creates the final package-->
		<dict>
			<key>Processor</key>
			<string>PkgCreator</string>
			<key>Arguments</key>
			<dict>
				<key>pkg_request</key>
				<dict>
					<key>pkgroot</key>
					<string>%RECIPE_CACHE_DIR%/pkgroot</string>
					<key>pkgname</key>
					<string>%VENDOR%%NAMEWITHOUTSPACES%-%version%</string>
					<key>pkgtype</key>
					<string>flat</string>
					<key>id</key>
					<string>com.adobe.AdobeCreativeCloudInstaller.pkg</string>
					<key>version</key>
					<string>%version%</string>
					<key>scripts</key>
					<string>Scripts</string>
				</dict>
			</dict>
		</dict>
<!--PathDeleter processor deletes any folders post package creation. It is typically used to cleanup unnecassary folders.-->
		<dict>
			<key>Processor</key>
			<string>PathDeleter</string>
			<key>Arguments</key>
			<dict>
				<key>path_list</key>
				<array>
					<string>%RECIPE_CACHE_DIR%/Scripts</string>
				</array>
			</dict>
		</dict>
	</array>
</dict>
</plist>